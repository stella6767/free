


<div class="card w-80 bg-base-100 shadow-xl"
     id="post-card">
    <figure>
        <div x-data="{ loading: true }">
            <img  x-show="loading" alt="Result loading..." src="/img/spinner.svg" />
            <img x-show="!loading" src=""
                 alt="post-thumbnail"
                 @load="loading = false"
            >
        </div>
    </figure>
    <div class="card-body">
        <h2 class="card-title"></h2>
        <p></p>
    </div>
</div>